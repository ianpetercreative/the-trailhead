<%- include('../partials/header') %>

<h2><%= title %></h2>
<br>
<div>Location: <%= hike.location %></div>
<br>
<div>Difficulty: <%= hike.difficulty %></div>
<br>
<div>Route Type: <%= hike.routeType %></div>
<br>
<div>Length: <%= hike.length %> miles</div>
<br>
<div>Description: <%= hike.description %></div>
<br>
<div>Categories: 
    <% hike.categories.forEach((c) => { %>
        <span class="hikes-show-category"><%= c %></span>
    <% }) %>
</div>

<br>
<br>

<h2>Reviews</h2>
<% if (user) { %>
    <form id="add-review-form" method="POST"
      action="/hikes/<%= hike._id %>/reviews">
      <label>Review:</label>
      <textarea name="content"></textarea>
      <label>Rating:</label>
      <select name="rating">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5" selected>5</option>
      </select>
      <input type="submit" value="Add Review">
    </form>
<% } else { %>
<p><em>Sign in to leave a review of your own!</em></p>
<% } %>

<% if (hike.reviews.length) { %>
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
          <th>Review</th>
          <th>Rating</th>
          <th></th>
        </tr>
      </thead>
<tbody>
    <% let total = 0 %>
    <% hike.reviews.forEach(function(r) { %>
      <% total += r.rating %>
      <tr>
        <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer" ><%= r.userName %></td>
        <!-- <td></td> -->
        <td><%= r.createdAt.toLocaleDateString() %></td>
        <td><%= r.content %></td>
        <td><%= r.rating %></td>
        <td>
          <% if (user?._id.equals(r.user)) { %>
            <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
              <button type="submit">X</button>
            </form>
          <% } %>
        </td>
      </tr>
    <% }); %>
    <tr>
      <td colspan="3"></td>
      <% hike.rating = (total / hike.reviews.length).toFixed(1) %>
      <td><strong><%= hike.rating %></strong></td>
    </tr>
  </tbody>
</table>
<% } else { %>
<h5>No Reviews Yet</h5>
<% } %>

<%- include('../partials/footer') %>